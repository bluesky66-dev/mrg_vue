# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{js,php,json,scss}]
charset = utf-8

[*.php]
indent_style = space
indent_size = 4

[resources/assets/**.vue-template]
indent_style = space
indent_size = 4

[resources/assets/js/**.js]
indent_style = space
indent_size = 2

[resources/assets/sass/**.scss]
indent_style = space
indent_size = 2
